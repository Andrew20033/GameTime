<Window x:Class="GameTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Time" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="50">
            <TextBlock Text="Welcome to GameTime!" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" Foreground="White"/>
            <TextBlock Text="Username" FontSize="16" FontWeight="Bold" Margin="0 0 0 5" Foreground="White"/>
            <TextBox x:Name="usernameTextBox" FontSize="16" Height="30" Width="250" Margin="0 0 0 10"/>
            <TextBlock Text="Password" FontSize="16" FontWeight="Bold" Margin="0 0 0 5" Foreground="White"/>
            <PasswordBox x:Name="passwordBox" FontSize="16" Height="30" Width="250" Margin="0 0 0 10"/>
            <Button Content="Register" Click="RegisterButton_Click" Foreground="White" Background="Black"/>
            <Button Content="Login" Click="LoginButton_Click" Foreground="White" Background="Black"/>
        </StackPanel>

        <Image Grid.Column="1" Source="Images/Register/r1.jpg" Width="200" Height="700" VerticalAlignment="Center"/>
    </Grid>
</Window>
